<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GoldenLife" parent="android:Theme.Material.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/dimmer</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.Jetnews" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/purple_500</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:background">@color/transparent</item>
    </style>
    <style name="Theme.GoldenLife.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
<!--        <item name="android:statusBarColor">@color/status_bar</item>-->
<!--        <item name="android:background">@color/status_bar</item>-->
    </style>


    <style name="Theme.GoldenLife.Immerse" parent="Theme.GoldenLife.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/system_ui_scrim_dark</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">@bool/use_light_nav_bar</item>
    </style>

    <style name="Theme.GoldenLife.Home" parent="Theme.GoldenLife.Immerse">
        <item name="android:windowLightStatusBar" tools:targetApi="m">@bool/use_light_status_bar</item>
    </style>

    <style name="Theme.GoldenLife.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.GoldenLife.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="HeaderBar">
        <item name="android:background">?android:colorBackground</item>
        <item name="android:elevation">@dimen/headerbar_elevation</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
        <item name="android:navigationBarColor">@color/white</item>
    </style>
    <style name="ToolBarStyle" parent="AppTheme.Base">
        <item name="android:textColorPrimary">@android:color/darker_gray</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>
        <item name="actionMenuTextColor">?attr/colorAccent</item>
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionModeOverlay">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">@color/transparent</item>
        <item name="colorPrimaryDark">@color/transparent</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- For selection -->
        <item name="selectableItemBackground">@drawable/base_selector_item_light</item>
        <item name="base_secondPrimaryTextSelector">@drawable/base_second_primary_text_selector_light</item>
        <item name="base_primaryTextSelector">@drawable/base_primary_text_selector_light</item>

        <!-- Spinner -->
    </style>

    <style name="base_ToolbarTextAppearance" parent="base_ToolBarStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/blue_700</item>
    </style>
</resources>