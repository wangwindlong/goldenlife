<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="base_Theme.GoldenLife" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/base_purple_500</item>
        <item name="colorPrimaryVariant">@color/base_purple_700</item>
        <item name="colorOnPrimary">@color/base_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/base_teal_200</item>
        <item name="colorSecondaryVariant">@color/base_teal_700</item>
        <item name="colorOnSecondary">@color/base_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="base_Theme.GoldenLife.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="base_Theme.GoldenLife.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="base_Theme.GoldenLife.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="base_HeaderBar">
        <item name="android:background">?android:colorBackground</item>
        <item name="android:elevation">@dimen/base_headerbar_elevation</item>
    </style>

    <style name="base_AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
        <item name="android:navigationBarColor">@color/base_white</item>
    </style>
    <style name="base_ToolBarStyle" parent="base_AppTheme.Base">
        <item name="android:textColorPrimary">@android:color/darker_gray</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>
        <item name="actionMenuTextColor">?attr/colorAccent</item>
    </style>

    <style name="base_AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionModeOverlay">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">@color/base_transparent</item>
        <item name="colorPrimaryDark">@color/base_transparent</item>
        <item name="colorAccent">@color/base_colorAccent</item>

        <!-- For selection -->
        <item name="selectableItemBackground">@drawable/base_selector_item_light</item>
        <item name="base_secondPrimaryTextSelector">@drawable/base_second_primary_text_selector_light</item>
        <item name="base_primaryTextSelector">@drawable/base_primary_text_selector_light</item>

        <!-- Spinner -->
    </style>

    <style name="base_ToolbarTextAppearance" parent="base_ToolBarStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000</item>
    </style>
</resources>